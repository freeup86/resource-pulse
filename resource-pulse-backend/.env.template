# Environment Configuration Template for Resource Pulse Backend
# Copy this file to .env and fill in your values

# Database Configuration - Required
DB_SERVER=your_sql_server.database.windows.net
DB_NAME=ResourcePulse
DB_USER=your_username
DB_PASSWORD=your_password
DB_PORT=1433

# Database Security Settings
DB_ENCRYPT=true
DB_TRUST_CERT=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30

# Server Configuration
NODE_ENV=production
PORT=8000

# API Features
USE_MOCK_DATA=false

# Database Pool Settings (Optional)
DB_MAX_POOL=10
DB_MIN_POOL=0
DB_IDLE_TIMEOUT=30000
DB_CONN_TIMEOUT=30000

# Frontend URL (for CORS)
FRONTEND_URL=https://resource-pulse.onrender.com